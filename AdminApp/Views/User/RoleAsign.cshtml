@model SolutionShop.ViewModel.System.Users.RoleAsignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Gán quyền người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Gán quyền người dùng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <div><a asp-action="Index" asp-controller="User" class="btn btn-success">Danh sách</a></div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="RoleAsign">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    @for (var i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-group">
                            <label>
                                @Model.Roles[i].Name
                            <input asp-for="Roles[i].Selected" type="checkbox"/>
                            <input asp-for="Roles[i].Id" type="hidden" />
                            <input asp-for="Roles[i].Name" type="hidden" />
                            </label>  
                        </div>
                    }
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
        </div>
        </div>
        </div>
