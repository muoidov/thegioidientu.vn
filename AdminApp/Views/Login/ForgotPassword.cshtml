@model SolutionShop.ViewModel.System.Users.ForgotPasswordRequest

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_System.cshtml";
}

<!DOCTYPE html>

<div class="card-header"><h3 class="text-center font-weight-light my-4">Quên mật khẩu</h3></div>
<div class="card-body">
    <form asp-action="Forgot" asp-controller="Login" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label class="small mb-1">Tài khoản</label>
            <input class="form-control py-4" asp-for="UserName" type="text" placeholder="Nhập tài khoản" />
        </div>
        <div class="form-group">
            <label class="small mb-1">Email</label>
            <input class="form-control py-4" asp-for="Email" type="text" placeholder="Nhập Email" />
        </div>
        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
            <a class="small" href="/Login/Index">Trở về đăng nhập</a>
            <button class="btn btn-primary" type="submit">Gửi yêu cầu</button>
        </div>
    </form>
</div>