@using SolutionShop.ViewModel.System.Users
@model LoginRequest

@{ Layout = "_System"; }

@section Scripts{
    <script>
    setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);</script>
}

<div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
<div class="card-body">
    <form asp-action="Index" asp-controller="Login" method="post">
        @if (ViewBag.Notice != null)
        {
<div id="msgAlert" class="alert alert-success" role="alert">
    @ViewBag.Notice
</div>}
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label class="small mb-1">Tài khoản</label>
            <input class="form-control py-4" asp-for="UserName" type="text" placeholder="Nhập tài khoản" />
        </div>
        <div class="form-group">
            <label class="small mb-1">Mật khẩu</label>
            <input class="form-control py-4" asp-for="PassWord" type="password" placeholder="Enter password" />
        </div>
        <div class="form-group">
            <div class="">
                <input asp-for="RememberMe" type="checkbox" />
                <label class="">Nhớ mật khẩu</label>
            </div>
        </div>

        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
            <a class="small" href="/Login/ForgotPassword">Bạn quên mật khẩu?</a>
            <button class="btn btn-primary" type="submit">Đăng nhập</button>
        </div>
    </form>
</div>