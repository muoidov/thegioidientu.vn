@{
    ViewData["Title"] = "Trạng thái";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h4>Cập nhật trạng thái</h4>
    <hr />
    <a class="btn btn-danger" asp-action="Index">Trở về</a>
    <div class="row">

        <div class="col-md-8">
            <form asp-action="Edit" asp-controller="Order">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input name="orderId" class="form-control" value="@ViewBag.orderId" hidden />
                </div>
                <select class="form-control col-3"
                        name="status" asp-items="@ViewBag.Status">
                    <option>----Chọn-----</option>
                </select>
                <br />
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="row">

    </div>
</div>
