@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc;
@{
    ViewData["Title"] = "Contact";

}
@model SolutionShop.ViewModel.System.Contact.ContactViewModel;
@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);</script>
}
<h1 localize-content>Contact</h1>
<div class="container">
    <hr class="soften">
    <h2 localize-content>Visit us</h2>
    <hr class="soften" />
    <div class="row">
        <div class="span2">
            <h4 localize-content>Contact Details</h4>
            <address>
                39 Pham Van Nghi<br /> HaNoi, VietNam
                <br /><br />
                <a href="href=" mailto:dovanmuoi198@gmail.com"">Email: dovanmuoi198@gmail.com</a>﻿<br />
                <br />
                <a href="tel:0839996725">Tel: 0839996725</a>﻿<br />

                <a href="tel:0839996725">Fax: 0839996725</a>﻿<br />
                <a href="https://localhost:5003">Website: thegioidientu.vn</a>﻿<br />
            </address>
        </div>

        <div class="span3">
            <h4 localize-content>Opening Hours</h4>
            <h5 localize-content>Monday - Friday</h5>
            <p>09:00am - 09:00pm<br /><br /></p>
            <h5 localize-content>Saturday</h5>
            <p>09:00am - 07:00pm<br /><br /></p>
            <h5 localize-content>Sunday</h5>
            <p>12:30pm - 06:00pm<br /><br /></p>
        </div>

        <div class="span3">
            @if (ViewBag.SuccessMsg != null)
            {
                <div id="msgAlert" class="alert alert-success" role="alert">
                    @ViewBag.SuccessMsg
                </div>}
            <h4 localize-content>Email Us</h4>
            <form class="form-horizontal" method="post" asp-controller="HomeW" asp-action="CreateContact">
                <div asp-validation-summary="ModelOnly" class="alert alert-warning"></div>
                <fieldset>
                    <div class="control-group">

                        <input type="text" asp-for="Name" placeholder="Tên" class="input-xlarge" />
                        <span asp-validation-for="Name" class="alert alert-warning"></span>
                    </div>
                    <div class="control-group">

                        <input type="text" asp-for="PhoneNumber" placeholder="Số điện thoại" class="input-xlarge" />
                        <span asp-validation-for="PhoneNumber" class="alert alert-warning"></span>
                    </div>
                    <div class="control-group">

                        <input type="text" asp-for="Email" placeholder="Hòm thư của bạn" class="input-xlarge" />
                        <span asp-validation-for="Email" class="alert alert-warning"></span>
                    </div>

                    <div class="control-group">
                        <textarea rows="3" id="textarea" class="input-xlarge" placeholder="Nội dung" asp-for="Message"></textarea>
                        <span asp-validation-for="Message" class="alert alert-warning"></span>
                    </div>

                    <button class="btn btn-large" type="submit" localize-content>Send Messages</button>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="span9">
            <iframe style="width:100%; height:300px; border: 0px" scrolling="no" src="https://maps.google.co.uk/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=18+California,+Fresno,+CA,+United+States&amp;aq=0&amp;oq=18+California+united+state&amp;sll=39.9589,-120.955336&amp;sspn=0.007114,0.016512&amp;ie=UTF8&amp;hq=&amp;hnear=18,+Fresno,+California+93727,+United+States&amp;t=m&amp;ll=36.732762,-119.695787&amp;spn=0.017197,0.100336&amp;z=14&amp;output=embed"></iframe><br />
